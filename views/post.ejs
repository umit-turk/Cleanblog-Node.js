<!-- header -->

<%- include('partials/_header.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              <%= post.dateCreated %> </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  

  <hr>
  <div class="tm-bg-gray tm-share-box ">
    <div class="text-center">
      <a href="/posts/edit/<%= post._id %>"  class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Post</span></a>	
    </div>	
    <div class="text-center">
      <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
        
      onclick="confirm('ARE YOU SURE')"	><span>Delete Post</span></a>	
    </div>								
  </div>

  <!-- Footer -->
  <%- include('partials/_footer.ejs') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
